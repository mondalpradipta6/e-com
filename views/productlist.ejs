}, 5000); // üëàÔ∏è time in milliseconds

     
    </script>

    <%}%>


  <%if(log.length>0){%>
    <div class="alert alert-success" id="flash">
      <%=log%>
    </div>

    <script>
      setTimeout(() => {
  const box = document.getElementById('flash');

  // üëáÔ∏è removes element from DOM
  box.style.display = 'none';

  // üëáÔ∏è hides element (still takes up space on page)
  // box.style.visibility = 'hidden';
}, 5000); // üëàÔ∏è time in milliseconds

     
    </script>

    <%}%>


    <%if(addPro.length>0){%>
      <div style="background-color: rgba(71, 71, 189, 0.841);color: rgb(20, 225, 20);" id="flash">
        <%=addPro%>
      </div>
      
      <script>
        setTimeout(() => {
          document.getElementById("flash").innerHTML = ''
        }, 5000);
      </script>
  
      <%}%>

      <%if(addCart.length>0){%>
        <div style="background-color: rgba(71, 71, 189, 0.841);color: rgb(20, 225, 20);" id="flash">
          <%=addCart%>
        </div>
        
        <script>
          setTimeout(() => {
            document.getElementById("flash").innerHTML = ''
          }, 5000);
        </script>
    
        <%}%>



      <h1>Product List</h1>
      <br><br>

      <div><a href="/addproduct">
          <button class="pro">Add Product</button>
        </a>

        <a href="/list">
          <button class="pro li">Lists</button>
        </a>

        <a href="/cartList">
          <button class="pro li"><i class="fa-solid fa-cart-plus"></i></button>
        </a>

      </div><br><br>

      <div>
        <a href="/changepassword">changepassword</a>
      </div><br><br>
      <div><a href="/logout">Logout</a></div><br><br>



      <main>
        <div class="container1">
          <div class="row">
            <div class="col-md-12">

              <% if (products.length){ %>
                <div class="row">
                  <% products.map(x=>{%>
                    <div class="col-md-3">
                      <div class="product">
                        <div>
                          <img src="uploads/<%=x.image%>" class="img-fluid" />
                        </div>
                        <h3>
                          <%= x.name %>
                        </h3>
                        <div>Price: <strong>
                            <%=x.price %>
                          </strong></div>
                        <div>Quantity: <%=x.quantity %>
                        </div>
                        <p>
                          <%=x.description%>
                        </p>
                        <!-- <i class="fa-solid fa-cart-plus"></i> -->
                        <a href="/addcart?productId=<%=x._id%>">
                          <button class="btn btn-danger" style="margin-left: 3px;"><i class="fa-solid fa-cart-plus"></i>
                            Add to cart</button>
                      </div>

                    </div>

                    <% }) %>
                </div>


                <% }else { %>
                  <div>No products available</div>

                  <% } %>
            </div>
          </div>
        </div>

      </main>

      </div>
</body>

</html>